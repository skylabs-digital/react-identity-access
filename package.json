{
  "name": "react-identity-access",
  "version": "0.1.0",
  "description": "A comprehensive React library for multi-tenancy, authentication, authorization, roles, session management, and settings management",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "ci": "yarn lint && yarn type-check && yarn test && yarn build",
    "preview": "vite preview",
    "demo": "cd demo && yarn dev"
  },
  "keywords": [
    "react",
    "authentication",
    "authorization",
    "multi-tenancy",
    "roles",
    "session-management",
    "feature-flags",
    "settings-management",
    "configuration",
    "typescript",
    "hooks",
    "context"
  ],
  "author": "Fer <fer@skylabs.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/skylabs/react-identity-access.git"
  },
  "bugs": {
    "url": "https://github.com/skylabs/react-identity-access/issues"
  },
  "homepage": "https://github.com/skylabs/react-identity-access#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "react-router-dom": ">=6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jsdom": "^25.0.1",
    "prettier": "^3.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "zod": "^4.1.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
